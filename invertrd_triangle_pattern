input:7
output:
*************
 ***********
  *********
   *******
    *****
     ***
      *
#include<stdio.h>
void main()
{
    int i,j,n,k;
    scanf("%d",&n);
    for(i=1;i<(2*n)-1;i++)
    {
        for(j=1;j<i;j++)
        {
            printf(" ");
        }
        for(j=i;j<=(2*n)-i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
}
